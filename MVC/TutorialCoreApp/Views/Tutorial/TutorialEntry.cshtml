@model TutorialCoreApp.Models.Tutorial
@*

    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<hr />
<a class="btn btn-primary" asp-action="TutorialEntry">Show Details</a>
<hr />

<form method="post">
    <div>
        <h1>Tutorial Entry</h1>
        <hr />
        <table>
            <tr>
                <td>Tutorial Id</td>
                <td>
                    @Html.TextBoxFor(obj => obj.Id)
                </td>
            </tr>
            <tr>
                <td>Tutorial Name</td>
                <td>
                    @Html.TextBoxFor(obj => obj.Name)
                </td>
            </tr>
            <tr>
                <td>Tutorial Description</td>
                <td>
                    @Html.TextBoxFor(obj => obj.Descr)
                </td>
            </tr>
            <tr>
                <td>Tutorial Published</td>
                <td>
                    @Html.TextBoxFor(obj => obj.Published)
                </td>
            </tr>
            <tr>
                <td><input type="submit" values="Save" /></td>
            </tr>
        </table>
        <hr />
        <div>
            @ViewBag.message
        </div>
    </div>
</form>
